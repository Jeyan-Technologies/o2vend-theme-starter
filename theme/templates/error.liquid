<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ error.title }} - {{ shop.name }}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700;800&display=swap" rel="stylesheet">
</head>
<body>
<div class="error-page">
  <div class="error-container">
    <div class="error-content">
      <div class="error-icon">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
      </div>
      
      <div class="error-header">
        <div class="status-code">{{ error.statusCode }}</div>
        <h1 class="error-title">{{ error.title }}</h1>
      </div>
      
      <p class="error-message">{{ error.message }}</p>
      
      {% if error.details %}
        <div class="error-details">
          <div class="error-details-header">Technical Details</div>
          <div class="error-details-content">{{ error.details }}</div>
        </div>
      {% endif %}
      
      <div class="error-actions">
        <a href="/" class="btn btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Back to Home
        </a>
        <button type="button" class="btn btn-secondary" id="retry-button">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="23 4 23 10 17 10"></polyline>
            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
          </svg>
          Try Again
        </button>
      </div>
      
      <div class="error-footer">
        <div class="error-meta">
          <div class="error-meta-item">
            <span class="meta-label">Store:</span>
            <span class="meta-value">{{ request.host }}</span>
          </div>
          <div class="error-meta-item">
            <span class="meta-label">Time:</span>
            <span class="meta-value">{{ error.timestamp }}</span>
          </div>
        </div>
        <p class="error-help">If this problem persists, please contact support.</p>
      </div>
    </div>
  </div>
</div>

<style>
  /* CSS Variables - Default Theme Colors */
  :root {
    --color-primary: #000000;
    --color-secondary: #6b7280;
    --color-white: #ffffff;
    --color-gray-50: #f9fafb;
    --color-gray-100: #f3f4f6;
    --color-gray-200: #e5e7eb;
    --color-gray-300: #d1d5db;
    --color-gray-400: #9ca3af;
    --color-gray-500: #6b7280;
    --color-gray-600: #4b5563;
    --color-gray-700: #374151;
    --color-gray-800: #1f2937;
    --color-gray-900: #111827;
    --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-display: 'Playfair Display', Georgia, serif;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-primary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-gray-50);
    padding: 2rem 1rem;
  }
  
  .error-container {
    max-width: 640px;
    width: 100%;
  }

  .error-content {
    background-color: var(--color-white);
    border-radius: 0.75rem;
    padding: 3rem 2rem;
    text-align: center;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-gray-200);
  }
  
  .error-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 2rem;
    color: var(--color-gray-400);
  }

  .error-icon svg {
    width: 64px;
    height: 64px;
  }

  .error-header {
    margin-bottom: 1.5rem;
  }

  .status-code {
    font-family: var(--font-display);
    font-size: 4rem;
    font-weight: 800;
    line-height: 1;
    color: var(--color-gray-900);
    margin-bottom: 1rem;
    letter-spacing: -0.05em;
  }
  
  .error-title {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-gray-900);
    margin-bottom: 0;
    letter-spacing: -0.025em;
  }
  
  .error-message {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-gray-600);
    margin-bottom: 2rem;
    max-width: 480px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .error-details {
    background-color: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
    text-align: left;
  }

  .error-details-header {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-gray-900);
    margin-bottom: 0.75rem;
  }

  .error-details-content {
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
    font-size: 0.8125rem;
    color: var(--color-gray-700);
    line-height: 1.6;
    word-break: break-word;
    overflow-wrap: break-word;
  }
  
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2.5rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    line-height: 1;
    text-decoration: none;
    border: 1px solid transparent;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 150ms ease-in-out;
    white-space: nowrap;
    font-family: var(--font-primary);
  }

  .btn svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-white);
    border-color: var(--color-primary);
  }

  .btn-primary:hover {
    background-color: var(--color-gray-800);
    border-color: var(--color-gray-800);
  }

  .btn-secondary {
    background-color: var(--color-white);
    color: var(--color-gray-700);
    border-color: var(--color-gray-300);
  }

  .btn-secondary:hover {
    background-color: var(--color-gray-50);
    border-color: var(--color-gray-400);
    color: var(--color-primary);
  }
  
  .error-footer {
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-200);
  }

  .error-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .error-meta-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }

  .meta-label {
    color: var(--color-gray-500);
    font-weight: 500;
  }

  .meta-value {
    color: var(--color-gray-700);
    font-weight: 600;
  }

  .error-help {
    font-size: 0.875rem;
    color: var(--color-gray-500);
    line-height: 1.5;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .error-page {
      padding: 1.5rem 1rem;
    }

    .error-content {
      padding: 2rem 1.5rem;
    }

    .error-icon svg {
      width: 48px;
      height: 48px;
    }

    .status-code {
      font-size: 3rem;
    }
    
    .error-title {
      font-size: 1.5rem;
    }
    
    .error-message {
      font-size: 1rem;
    }
    
    .error-actions {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
      padding: 0.875rem 1.25rem;
    }

    .error-meta {
      gap: 0.75rem;
    }

    .error-meta-item {
      flex-direction: column;
      gap: 0.25rem;
    }
  }

  @media (max-width: 480px) {
    .status-code {
      font-size: 2.5rem;
    }

    .error-title {
      font-size: 1.25rem;
    }

    .error-details {
      padding: 1rem;
    }

    .error-details-content {
      font-size: 0.75rem;
    }
  }
</style>

<script>
  // Wait for DOM to be ready
  (function() {
    'use strict';
    
    function initErrorPage() {
      const retryButton = document.getElementById('retry-button');
      
      if (retryButton) {
        retryButton.addEventListener('click', function() {
          // Reload the page
          window.location.reload();
        });
      }
    }
    
    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initErrorPage);
    } else {
      initErrorPage();
    }
  })();
</script>
</body>
</html>
